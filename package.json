{
  "name": "api-product",
  "version": "1.0.0",
  "description": "REST-API for products registry",
  "main": "app.js",
  "scripts": {
    "tsc": "tsc",
    "dev": "NODE_ENV=DEV ts-node-dev --respawn --transpile-only src/server.ts",
    "start": "node build/src/server.js",
    "test": "NODE_ENV=TEST jest --watch",
    "lint": "ts-standard"
  },
  "author": "Juan Manuel Ticona Pacheco",
  "license": "ISC",
  "devDependencies": {
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/jest": "^29.4.0",
    "@types/morgan": "1.9.4",
    "@types/node": "18.11.19",
    "dotenv": "16.0.3",
    "jest": "^29.4.1",
    "ts-jest": "^29.0.5",
    "ts-node-dev": "2.0.0",
    "ts-standard": "12.0.2",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "cors": "2.8.5",
    "express": "4.18.2",
    "morgan": "1.10.0",
    "pg": "8.9.0",
    "reflect-metadata": "0.1.13",
    "typeorm": "0.3.11"
  },
  "eslintConfig": {
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "extends": [
      "./node_modules/ts-standard/eslintrc.json"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "collectCoverage": true,
    "coveragePathIgnorePatterns": [
      "/node_modules",
      "/build/"
    ]
  }
}
